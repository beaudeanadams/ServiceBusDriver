@code
{
    private bool _menuVisible = false;
    private bool _settingsVisible = false;
    private bool _newInstanceVisible = false;
    private string _teamNameText = string.Empty;
    
    [CascadingParameter]
    public Task<AuthenticationState> AuthenticationState { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationState;
        if (authState?.User?.Identity != null && authState.User.Identity.IsAuthenticated)
        {
            var user = authState.User;
            _teamNameText = user.Claims.SingleOrDefault(claim => claim.Type==ClaimTypes.GroupSid)?.Value;

        }
    }

    private void ToggleMenu()
    {
        _menuVisible = !_menuVisible;
    }

    private void ToggleSettings()
    {
        _settingsVisible = !_settingsVisible;
    }

    private void ToggleAddInstanceMenu()
    {
        _newInstanceVisible = !_newInstanceVisible;
    }

    private async Task Logout()
    {
        await _localStorageService.SetItemAsStringAsync(ApiConstants.LocalStorageConstants.JwtTokenKey, string.Empty);
        _navigationManager.NavigateTo(ApiConstants.NavigationConstants.LoginPage, true);
    }
}