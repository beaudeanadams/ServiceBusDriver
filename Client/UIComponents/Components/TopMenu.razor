        <NavLink class="md:px-4" @onclick="ToggleAddInstanceMenu" style="cursor: pointer;">
            <svg xmlns="http://www.w3.org/2000/svg" class="feather feather-settings block mx-auto block mx-auto" width="24px" height="24px" viewBox="0 0 24 24" fill="none" stroke="currentColor">
